# Database configuration
# Set to true to use local SQLite instead of Postgres
DB_USE_SQLITE=true
# SQLite file URL (default stores DB as local.db in project root)
SQLITE_URL=sqlite:///./local.db

# If using Postgres, set DB_USE_SQLITE=false and configure DATABASE_URL
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/circlefund

# JWT configuration
JWT_SECRET_KEY=change-me
